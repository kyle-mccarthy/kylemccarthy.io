{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
