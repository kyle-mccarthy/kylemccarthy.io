{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "outDir": ".next",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@ui/*": ["ui/*"],
      "@pages/*": ["pages/*"]
    },
    "typeRoots": ["node_modules/@types", "./typings"],
    "types": ["jest"]
  },
  "include": ["./pages", "./ui", "./src", "./typings"],
  "exclude": ["node_modules"]
}
